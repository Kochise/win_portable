%% \usepackage[T1]{polski}
%% ----------------------------------------------------------------------------


\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tgschola}
  [2009/09/27 v1.2 TeX Gyre Schola as default roman family]

\def\tg@scale@to@rm#1#2{%
  \begingroup
  \fontsize{10}{0}\usefont{\encodingdefault}{\rmdefault}{m}{n}%
  #1%
  \xdef\qcs@scale{%
    \strip@pt
    \dimexpr  1pt *
    \@tempdima / \dimexpr#2pt\relax 
    \relax}%
  \PackageInfo{tgschola}{The qcs family is scaled by \qcs@scale}
  \endgroup
}

\RequirePackage{kvoptions}
\SetupKeyvalOptions{prefix=qcs@}
\DeclareStringOption{scale}[1]
\define@key{tgschola}{matchlowercase}[1]{%
  \tg@scale@to@rm{\@tempdima#1\fontdimen5\font}{4.66}}
\define@key{tgschola}{matchuppercase}[1]{%
  \tg@scale@to@rm{\setbox0\hbox{XWYZH}\@tempdima#1\ht0}{7.295}}
\DeclareVoidOption{oldspacing}{%
  \def\qcs@set@spacing{%
    \fontdimen2\font=.333em
    \fontdimen3\font=.222em
    \fontdimen4\font=.111em
  }%
}
\ProcessKeyvalOptions*

\renewcommand{\rmdefault}{qcs}
\fontfamily{\familydefault}
\renewcommand\bfdefault{b}

\endinput
