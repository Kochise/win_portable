\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tgcursor}
  [2009/09/10 v1.2 TeX Gyre Cursor as default typewriter family]

\def\tg@scale@to@rm#1#2{%
  \begingroup
  \fontsize{10}{0}\usefont{\encodingdefault}{\rmdefault}{m}{n}%
  #1%
  \xdef\qcr@scale{%
    \strip@pt
    \dimexpr  1pt *
    \@tempdima / \dimexpr#2pt\relax 
    \relax}%
  \PackageInfo{tgcursor}{The qcr family is scaled by \qcr@scale}
  \endgroup
}

\RequirePackage{kvoptions}
\SetupKeyvalOptions{prefix=qcr@}
\DeclareStringOption{scale}[1]
\define@key{tgcursor}{matchlowercase}[1]{%
  \tg@scale@to@rm{\@tempdima#1\fontdimen5\font}{4.17}}
\define@key{tgcursor}{matchuppercase}[1]{%
  \tg@scale@to@rm{\setbox0\hbox{XWYZH}\@tempdima#1\ht0}{5.69498}}
\DeclareVoidOption{oldspacing}{}
\ProcessKeyvalOptions*

\renewcommand{\ttdefault}{qcr}
\renewcommand\bfdefault{b}

