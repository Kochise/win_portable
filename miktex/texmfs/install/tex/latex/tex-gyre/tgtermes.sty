\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tgtermes}
  [2009/09/27 v1.2 TeX Gyre Termes as default roman family]

\def\tg@scale@to@rm#1#2{%
  \begingroup
  \fontsize{10}{0}\usefont{\encodingdefault}{\rmdefault}{m}{n}%
  #1%
  \xdef\qtm@scale{%
    \strip@pt
    \dimexpr  1pt *
    \@tempdima / \dimexpr#2pt\relax 
    \relax}%
  \PackageInfo{tgtermes}{The qtm family is scaled by \qtm@scale}
  \endgroup
}

\RequirePackage{kvoptions}
\SetupKeyvalOptions{prefix=qtm@}
\DeclareStringOption{scale}[1]
\define@key{tgtermes}{matchlowercase}[1]{%
  \tg@scale@to@rm{\@tempdima#1\fontdimen5\font}{4.49998}}
\define@key{tgtermes}{matchuppercase}[1]{%
  \tg@scale@to@rm{\setbox0\hbox{XWYZH}\@tempdima#1\ht0}{6.76}}
\DeclareVoidOption{oldspacing}{%
  \def\qtm@set@spacing{%
    \fontdimen2\font=.333em
    \fontdimen3\font=.222em
    \fontdimen4\font=.111em
  }%
}
\ProcessKeyvalOptions*

\renewcommand{\rmdefault}{qtm}
\fontfamily{\familydefault}
\renewcommand\bfdefault{b}

