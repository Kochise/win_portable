\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tgchorus}
  [2009/09/27 v1.2 TeX Gyre Chorus as default serif family]

\def\tg@scale@to@rm#1#2{%
  \begingroup
  \fontsize{10}{0}\usefont{\encodingdefault}{\rmdefault}{m}{n}%
  #1%
  \xdef\qzc@scale{%
    \strip@pt
    \dimexpr  1pt *
    \@tempdima / \dimexpr#2pt\relax 
    \relax}%
  \PackageInfo{tgchorus}{The qzc family is scaled by \qzc@scale}
  \endgroup
}

\RequirePackage{kvoptions}
\SetupKeyvalOptions{prefix=qzc@}
\DeclareStringOption{scale}[1.1]
\define@key{tgchorus}{matchlowercase}[1]{%
  \tg@scale@to@rm{\@tempdima#1\fontdimen5\font}{3.99998}}
\define@key{tgchorus}{matchuppercase}[1]{%
  \tg@scale@to@rm{\setbox0\hbox{XWYZH}\@tempdima#1\ht0}{5.85999}}
\DeclareVoidOption{oldspacing}{%
  \def\qzc@set@spacing{%
    \fontdimen2\font=.333em
    \fontdimen3\font=.222em
    \fontdimen4\font=.111em
  }%
}
\ProcessKeyvalOptions*

\renewcommand{\rmdefault}{qzc}
\fontfamily{\familydefault}
\renewcommand\bfdefault{b}

