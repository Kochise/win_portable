\newcommand{\textfrac}[3][]{% e.g., \textfrac[1]{7}{8}
  \mbox{%
    \ifthenelse{\not\equal{#1}{}}%Test for integer portion [optional #1]
      {\textlf{#1}\kern.05em}{}%         
    \textsu{#2}% numerator
    \StrRight{#2}{1}[\@digit@]%
    % look for  1, 2, 6, 7
    \ifcase\@digit@% 0
    \or%\kern.03em% 1
    \or%\kern.02em% 2
    \or\kern-.02em% 3
    \or%\kern-.01em% 4
    \or\kern-.01em% 5
    \or%\kern-.01em% 6
    \or\kern-.08em% 7
    \or%\kern-.08em% 8
    \or\kern-.04em% 9
    \fi%
    \kern\ntx@foresolidus{\fontencoding{TS1}\selectfont\char"2F}%
    \kern\ntx@aftsolidus%
    \StrLeft{#3}{1}[\@digit@]%
    % look for 1, 4, 7
    \ifcase\@digit@% 0
    \or%\kern -.02em% 1
    \or\kern .01em% 2
    \or% 3
    \or\kern -.08em% 4
    \or\kern -.03em% 5
    \or\kern -.05em% 6
    \or%\kern .02em% 7
    \fi%
    \textin{#3}%       denominator [#3]
  }%
}
